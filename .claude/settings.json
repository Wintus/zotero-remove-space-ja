{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": true,
  "permissions": {
    "allow": [
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr create:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm run start:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm audit:*)",
      "Bash(npm outdated:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git mv:*)",
      "Bash(git rm:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(tree:*)",
      "Bash(tsc:*)",
      "Bash(gh pr diff:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:github.io)",
      "WebFetch(domain:zotero.com)",
      "WebFetch(domain:www.zotero.com)",
      "WebSearch"
    ],
    "ask": [
      "Bash(git stash:*)",
      "Bash(git clean:*)",
      "Bash(git checkout:*)",
      "Bash(git restore:*)",
      "Bash(git switch:*)",
      "Bash(git tag:*)",
      "Bash(node:*)",
      "Bash(npx:*)",
      "Bash(npm uninstall:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(npm run release:*)",
      "Bash(npm publish:*)"
    ]
  }
}
