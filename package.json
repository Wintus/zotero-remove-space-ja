{
  "name": "zotero-remove-space-ja",
  "type": "module",
  "version": "0.1.0",
  "description": "Remove unnecessary spaces from Japanese text in PDF annotations",
  "config": {
    "addonName": "Remove Space (JA)",
    "addonID": "removespace-ja@wintus.github.io",
    "addonRef": "removespace-ja",
    "addonInstance": "RemoveSpaceJA",
    "prefsPrefix": "extensions.zotero.removespace-ja"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wintus/zotero-remove-space-ja.git"
  },
  "author": "Wintus",
  "bugs": {
    "url": "https://github.com/Wintus/zotero-remove-space-ja/issues"
  },
  "homepage": "https://github.com/Wintus/zotero-remove-space-ja#readme",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "zotero-plugin serve",
    "build": "zotero-plugin build && tsc --noEmit",
    "lint:check": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint . --fix",
    "release": "zotero-plugin release",
    "test": "zotero-plugin test",
    "update-deps": "npm update --save"
  },
  "dependencies": {
    "zotero-plugin-toolkit": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@zotero-plugin/eslint-config": "^0.6.7",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "mocha": "^11.7.5",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "zotero-plugin-scaffold": "^0.8.2",
    "zotero-types": "^4.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.xhtml"
        ],
        "options": {
          "htmlWhitespaceSensitivity": "css"
        }
      }
    ]
  }
}
